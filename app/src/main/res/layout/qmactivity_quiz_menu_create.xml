<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_quiz_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.apps.botrobs.studybuddy.QuizMakerFeature.QuizMenuCreate">

    <android.support.v7.widget.Toolbar
        android:id="@+id/quiz_menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Create a Quiz!"
        android:background="#fffc00"
        android:elevation="5dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="@string/theTutorialQuizMenu"
            android:textSize="15sp"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_gravity="center|top"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="normal"
            android:src="@drawable/ic_action_qm_create"
            android:layout_gravity="bottom|end"
            android:layout_margin="20dp"
            app:backgroundTint="#fffc00"
            android:onClick="createMenu"/>

        <ListView
            android:id="@+id/quiz_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"/>
    </FrameLayout>

</LinearLayout>
